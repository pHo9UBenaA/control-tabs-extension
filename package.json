{
	"name": "cleaner-extension",
	"version": "0.0.0",
	"scripts": {
		"build": "node esbuild.js",
		"_lint": "eslint . --ignore-path .gitignore",
		"lint": "pnpm run _lint; pnpm run _prettier",
